# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Environment: development | production | test
NODE_ENV=development

# Port number for the server to listen on
PORT=3000

# Base URL for the API (used in Swagger docs and email links)
API_BASE_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?[options]
# Example: postgresql://admin:secret@localhost:5432/aspa_db
DATABASE_URL=postgresql://user:password@localhost:5432/aspa_db

# Database connection pool settings (optional, defaults shown)
# Maximum number of connections in the pool
DB_POOL_MAX=10

# Minimum number of connections in the pool
DB_POOL_MIN=2

# Maximum time (ms) a connection can be idle before being closed
DB_POOL_IDLE_TIMEOUT=10000

# Maximum time (ms) to wait for a connection from the pool
DB_POOL_ACQUIRE_TIMEOUT=30000

# =============================================================================
# JWT (JSON WEB TOKEN) CONFIGURATION
# =============================================================================
# Secret key for signing JWT tokens
# IMPORTANT: Use a strong, random string in production (minimum 256 bits / 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-key-change-in-production-min-256-bits

# Access token expiration time
# Format: number + unit (s=seconds, m=minutes, h=hours, d=days)
# Examples: 15m, 1h, 7d
JWT_EXPIRES_IN=1h

# Refresh token expiration time
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# SMTP server hostname
SMTP_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL, 25 for unencrypted)
SMTP_PORT=587

# Use SSL/TLS for secure connection (true for port 465, false for port 587)
SMTP_SECURE=false

# SMTP authentication username (usually your email address)
SMTP_USER=your-email@gmail.com

# SMTP authentication password
# For Gmail: Use an App Password (https://support.google.com/accounts/answer/185833)
SMTP_PASSWORD=your-app-password

# Email address to use as sender
EMAIL_FROM=noreply@aspa-sanvicente.com

# Email sender name
EMAIL_FROM_NAME=ASPA San Vicente

# =============================================================================
# CORS (CROSS-ORIGIN RESOURCE SHARING) CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
# Development: Include both backend and frontend URLs
# Production: Only include your production frontend URL(s)
# Examples:
#   Development: http://localhost:3000,http://localhost:5173
#   Production: https://aspa-sanvicente.com,https://www.aspa-sanvicente.com
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Allow credentials (cookies, authorization headers) in CORS requests
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Time window for rate limiting in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum number of requests per window per IP address
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Bcrypt salt rounds for password hashing (10-12 recommended, higher = more secure but slower)
BCRYPT_SALT_ROUNDS=12

# Password reset token expiration time in hours
PASSWORD_RESET_EXPIRY_HOURS=1

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error | warn | info | debug
LOG_LEVEL=info

# Enable request logging (true | false)
LOG_REQUESTS=true
