# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains example production settings
# Copy this to .env.production and update with your actual production values
# NEVER commit actual production credentials to version control
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
API_BASE_URL=https://api.aspa-sanvicente.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use a strong password and secure connection string
# Consider using connection pooling service like PgBouncer
DATABASE_URL=postgresql://prod_user:STRONG_PASSWORD_HERE@db.example.com:5432/aspa_prod_db?sslmode=require

# Production connection pool settings (adjust based on your server capacity)
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE_TIMEOUT=10000
DB_POOL_ACQUIRE_TIMEOUT=30000

# =============================================================================
# JWT (JSON WEB TOKEN) CONFIGURATION
# =============================================================================
# CRITICAL: Generate a strong random secret for production
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_SECRET_MINIMUM_32_CHARACTERS

# Consider shorter expiration times for production
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# Use a production email service (SendGrid, AWS SES, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@aspa-sanvicente.com
EMAIL_FROM_NAME=ASPA San Vicente

# =============================================================================
# CORS (CROSS-ORIGIN RESOURCE SHARING) CONFIGURATION
# =============================================================================
# Only allow your production frontend domain(s)
CORS_ORIGIN=https://aspa-sanvicente.com,https://www.aspa-sanvicente.com
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Stricter rate limiting for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Higher salt rounds for production (slower but more secure)
BCRYPT_SALT_ROUNDS=12
PASSWORD_RESET_EXPIRY_HOURS=1

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Use 'warn' or 'error' in production to reduce log volume
LOG_LEVEL=warn
LOG_REQUESTS=false
