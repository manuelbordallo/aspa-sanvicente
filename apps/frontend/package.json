{
  "name": "school-management-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:clean && tsc && vite build",
    "build:clean": "rm -rf dist",
    "build:prod": "npm run build:clean && tsc && vite build --mode production",
    "build:analyze": "npm run build -- --mode analyze",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "test:ci": "web-test-runner --coverage --node-resolve",
    "deploy": "./scripts/deploy.sh",
    "deploy:msg": "./scripts/deploy.sh",
    "deploy:prod": "./scripts/build-production.sh",
    "validate": "npm run lint && npm run format:check && npm run test && npm run build"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@open-wc/testing": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.45.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.5",
    "terser": "^5.44.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "@lit-labs/router": "^0.1.3",
    "@lit/context": "^1.1.0",
    "lit": "^3.1.0"
  }
}
